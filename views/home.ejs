// views/home.ejs
<%- include('includes/head',{ pageTitle: 'Pulse | Blogs', pageStyle: 'style.css' }) %>

<%- include('includes/navigation') %>




<main class="content">
  <aside class="left-sidebar">
    <h2>MOST POPULAR</h2>
    <% featured.slice(0, 2).forEach(article => { %>
      <div class="popular-article">
        <img src="<%= article.image %>" alt="<%= article.title %>">
        <p><%= article.category %></p>
        <h3><%= article.title %></h3>
        <p><%= article.createdAt.toLocaleDateString() %></p>
      </div>
    <% }) %>
  </aside>

  <section class="hero-section">
    <h1>THE BEAUTY OF DESIGN</h1>
    <img src="img/girl2.jpg" alt="girl">
  </section>

  <aside class="right-sidebar">
    <div class="latest">
      <h2>LATEST</h2>
      <% featured.forEach(article => { %>
        <p><strong><%= article.title %></strong></p>
      <% }) %>
    </div>
  </aside>
</main>

<div class="health-section">
  <h1>HEALTH</h1>
  <div class="health">
    <% healthArticles.forEach(article => { %>
      <article class="post">
        <img src="<%= article.image %>" alt="<%= article.title %>">
        <h2><%= article.title %></h2>
        <p><%= article.description %></p>
        <div class="meta">
          <span><%= new Date(article.date).toLocaleDateString() %></span>
          <span class="tag"><%= article.category %></span>
        </div>
      </article>
    <% }) %>
  </div>
</div>

<!-- Add sports section -->
<div class="section_sports">
  <h1>SPORTS</h1>
  <div class="section">
    <% sportsArticles.forEach(article => { %>
      <article class="post">
        <img src="<%= article.image %>" alt="<%= article.title %>">
        <h2><%= article.title %></h2>
        <p><%= article.description %></p>
        <div class="meta">
          <span><%= new Date(article.date).toLocaleDateString() %></span>
          <span class="tag"><%= article.category %></span>
        </div>
      </article>
    <% }) %>
  </div>
</div>

<%- include('includes/end') %>