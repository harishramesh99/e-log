<%- include('includes/head', { pageTitle: article.title, pageStyle: 'details.css' }) %>
<%- include('includes/navigation', { currentPage: 'article.title' }) %>

<main class="content">
  <section class="hero-section">
    <h1><%= article.title %></h1>
    <% if (article.image) { %>
      <img src="<%= article.image %>" alt="<%= article.title %>" class="article-image">
    <% } %>
    <div class="writing">
      <p><%= article.content %></p>
    </div>
  </section>

  <aside class="right-sidebar">
    <div class="latest">
      <h2>RELATED ARTICLES</h2>
      <% if (relatedArticles && relatedArticles.length > 0) { %>
        <% relatedArticles.forEach(related => { %>
          <a href="/details/<%= related._id %>" class="related-article">
            <p><strong><%= related.title %></strong></p>
          </a>
        <% }) %>
      <% } %>
    </div>
  </aside>
</main>