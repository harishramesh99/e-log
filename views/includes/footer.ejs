<!-- views/partials/footer.ejs -->
<footer class="site-footer">
    <div class="footer-content">
        <div class="footer-section">
            <h3>DE GUNTIBUS</h3>
            <p>Breaking news and celebrating stories and insights on current events and lifestyles.</p>
        </div>
        
        <div class="footer-section">
            <h3>Pages</h3>
            <ul>
                <% footerItems.filter(item => item.section === 'pages').forEach(item => { %>
                    <li><a href="<%= item.url %>"><%= item.name %></a></li>
                <% }); %>
            </ul>
        </div>

        <div class="footer-section">
            <h3>Socials</h3>
            <ul>
                <% footerItems.filter(item => item.section === 'social').forEach(item => { %>
                    <li><a href="<%= item.url %>"><%= item.name %></a></li>
                <% }); %>
            </ul>
        </div>

        <div class="footer-section">
            <h3>Contact Us</h3>
            <p>123 Finance Boulevard</p>
            <p>Los Angeles, CA 12345</p>
        </div>
    </div>
</footer>